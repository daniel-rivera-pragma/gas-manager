{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": ["*.js", "src/**/*.js", "src/.**/*.js", "tests/**/*.test.js", "**/*.d.ts"],
  "exclude": ["node_modules", "coverage", ".vscode", ".gemini"]
}
